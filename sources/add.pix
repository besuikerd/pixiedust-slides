imports
  pixiedust/components/native/inputs {
    component IntInput(ref value: Int)
  }

view
  component Add(add: Add) {
    action reset(){
      add {
        lhs { value = 0 }
        rhs { value = 0 }
      }
    }
    button[onClick=reset()]{ "Reset" }
    @IntInput(add.lhs.value) "+" @IntInput(add.rhs.value) "=" add.value
  }