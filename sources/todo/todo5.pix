component FilterType(name: String, list: TodoList) {
  li {
    a[onClick=setFilter()] { name }
  }
  action setFilter(){
    list { filter = name }
  }
}

component TodoFilters(list: TodoList) {
  ul{
    @FilterType("All", list)
    @FilterType("Completed", list)
    @FilterType("Not Completed", list)
  }
}

